extends ../layout

block content
  section.signin
    .container
      .row
        .col-lg-12.text-center
          h2 Create a new account
          hr.star-primary
      #message
        .row
          span #{message}
      .row
        .col-lg-8.col-lg-offset-2
          +form('/register')
            .control-group
              label
                | Enter username
              .form-group.col-xs-12.floating-label-form-group.controls
                if username
                  +input-text('username', 'Username', username)
                else
                  +input-text('username', 'Username')
            .control-group
              label
                | Enter email
              .form-group.col-xs-12.floating-label-form-group.controls                    
                if email
                  +input-email('email', 'Email', email)
                else
                  +input-email('email', 'Email')
            .control-group
              label
                | Enter password
              .form-group.col-xs-12.floating-label-form-group.controls                    
                +input-password('password', 'Password')
            .signup-submit
              .form-group.col-xs-12
                button.btn.btn-success.btn-lg(type='submit') Create a new account